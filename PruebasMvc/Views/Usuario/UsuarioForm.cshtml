@model CombinateUserDTO

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <div class="card">
                @if (Model is null || Model.usuario == null)
                {
                    <h1 class="card-header">Crear Usuario</h1>
                    <div class="card-body">

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                <span>@TempData["ErrorMessage"]</span>
                                <br />
                            </div>
                        }
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success mt-3" role="alert">
                                @TempData["SuccessMessage"]
                            </div>
                        }

                        <form method="post" asp-action="EditUsuario" asp-controller="Usuario" id="formulario">
                            <div class="form-group">
                                <input type="text" id="Guid" name="create.Guid" class="form-control" value="@Model?.create?.guid" hidden />
                            </div>
                            <div class="form-group">
                                <label for="Name">Nombre</label>
                                <input type="text" id="Name" name="create.Name" class="form-control" value="@Model?.create?.name" />
                            </div>
                            <div class="form-group">
                                <label for="UserName">UserName</label>
                                <input type="text" id="UserName" name="create.UserName" class="form-control" value="@Model?.create?.userName" />
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="text" id="Password" name="create.Password" class="form-control" value="@Model?.create?.password" />
                            </div>
                            <div class="form-group">
                                <label for="PasswordConfirm">Confirmacion Password</label>
                                <input type="text" id="PasswordConfirm" name="create.PasswordConfirm" class="form-control" value="@Model?.create?.passwordConfirm" />
                            </div>

                            <div class="form-group d-flex justify-content-between mt-3">
                                <button type="submit" class="btn btn-success" id="btn-save">Guardar</button>
                                <a href="../usuario" class="btn btn-danger">Cancelar</a>
                            </div>
                        </form>

                    </div>


                }
                else
                {
                    <h1 class="card-header">Editar Usuario</h1>
                    <div class="card-body">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <span>@error.ErrorMessage</span>

                                    <br />
                                }
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                <span>@TempData["ErrorMessage"]</span>
                                <br />
                            </div>
                        }
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success mt-3" role="alert">
                                @TempData["SuccessMessage"]
                            </div>
                        }

                        <form method="post" asp-action="EditUsuario" asp-controller="Usuario" id="formulario">
                            <div class="form-group">
                                <input type="text" id="Guid" name="usuario.Guid" class="form-control" value="@Model?.usuario?.guid" hidden />
                            </div>
                            <div class="form-group">
                                <label for="Name">Nombre</label>
                                <input type="text" id="Name" name="usuario.Name" class="form-control" value="@Model?.usuario?.name" />
                            </div>
                            <div class="form-group">
                                <label for="UserName">UserName</label>
                                <input type="text" id="UserName" name="usuario.UserName" class="form-control" value="@Model?.usuario?.userName" />
                            </div>

                            <div class="form-group d-flex justify-content-between mt-3">
                                <button type="submit" class="btn btn-success mt-3" id="btn-edit-save">Guardar Cambios</button>
                                <button type="button" class="btn btn-danger" onclick="window.location.href='..';">Cancelar</button>
@*                                 <a href="../" class="btn btn-danger">Cancelar</a> *@
                            </div>
                        </form>

                    </div>
                }


            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Views/User.js"></script>
}

